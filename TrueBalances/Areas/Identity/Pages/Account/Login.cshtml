@page
@model LoginModel

@{
    ViewData["Title"] = "Connexion";
}

<style>
    .custom-header {
        color: #08a045;
        padding: 20px;
        text-align: center;
        border-radius: 0.25rem;
        margin-bottom: 20px;
    }

        .custom-header h1 {
            margin: 0;
            font-size: 2.5rem;
        }

    .form-container {
        margin-top: 20px;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 0.25rem;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .form-container h2 {
            color: #08a045;
            font-size: 1.75rem;
            margin-bottom: 20px;
        }

        .form-container hr {
            margin-bottom: 20px;
        }

    .form-floating .form-control {
        border-radius: 0.25rem;
    }

    .form-floating label {
        color: #08a045;
    }

    .form-container .btn-primary {
        background-color: #548c2f;
        border: none;
        transition: background-color 0.3s, box-shadow 0.3s;
    }

        .form-container .btn-primary:hover {
            background-color: #06a03d;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        }

    .form-container a {
        color: #08a045;
        text-decoration: none;
    }

        .form-container a:hover {
            text-decoration: underline;
        }
</style>

<div class="custom-header">
    <h1>@ViewData["Title"]</h1>
</div>

<div class="row justify-content-center">
    <div class="col-md-6 form-container">
        <section>
            <form id="account" method="post">
                <h2>Utiliser un compte pour se connecter.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="nom@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="mot de passe" />
                    <label asp-for="Input.Password" class="form-label">Mot de passe</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        Se souvenir de moi
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Se connecter</button>
                </div>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Mot de passe oublié ?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">S'inscrire en tant que nouvel utilisateur</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Renvoyer la confirmation par e-mail</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
