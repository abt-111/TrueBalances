@model TrueBalances.Models.Expense

@{
    ViewData["Title"] = "Supprimer une dépense";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-header text-white text-center" style="background-color: #4CAF50;">
                    <h2 class="mb-0">@ViewData["Title"]</h2>
                </div>
                <div class="card-body p-4">
                    <h4>Êtes-vous sûr de vouloir supprimer cette dépense ?</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Title)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Title)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Amount)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Amount)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Date)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Date)
                        </dd>
                        @*  <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Category.Name)
                        </dt>
                        <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Category.Name)
                        </dd> *@
                    </dl>

                    <form asp-action="Delete" method="post">
                        <!-- Les champs cachés nécessaires -->
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="GroupId" />

                        <div class="form-group text-center mt-4">
                            <button type="submit" class="btn btn-danger">Supprimer</button>
                            <a asp-action="Index" asp-route-groupId="@Model.GroupId" class="btn btn-secondary">Retour</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
