@model IEnumerable<TrueBalances.Models.Group>

@{
    ViewData["Title"] = "Liste des groupes";
}
@{
    var groups = Model ?? new List<TrueBalances.Models.Group>();
}

<style>
    .custom-table-header {
        background-color: #9ece9a;
        color: white;
        text-align: center;
    }

    .table {
        border-radius: 0.25rem;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .table thead th {
            background-color: #74a57f;
            color: white;
            text-align: center;
            font-weight: bold;
        }

        .table tbody tr:nth-child(even) {
            background-color: white;
        }

        .table tbody tr:hover {
            background-color: white;
        }
</style>

<div class="container">
    <div class="row">
        <div class="col-12 text-center mb-3">
            <h1>Liste des groupes</h1>
        </div>
        <p>
            <a asp-action="Create" class="btn btn-primary">Ajouter un groupe</a>
        </p>
    </div>

    <div class="row">
        <div class="col-12">
            <table class="table table-striped table-bordered">
                <thead class="custom-table-header">
                    <tr>
                        <th>Nom du groupe</th>
                        <th>Membres</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var group in groups)
                    {
                        <tr>
                            <td>@group.Name</td>
                            <td>@group.Members.Count()</td>
                            <td class="action-links text-center">
                                <a asp-action="Edit" asp-route-id="@group.Id" title="Editer">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@group.Id" title="Détails">
                                    <i class="fas fa-info-circle"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@group.Id" title="Supprimer">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div>
        <a asp-controller="Home" asp-action="Index" style="color: #073b3a;">Retour à l'accueil</a>
    </div>
</div>
