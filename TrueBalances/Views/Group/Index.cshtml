<div class="text-center welcome-section">
    <h1 class="display-4">
        @if (User.Identity.IsAuthenticated)
        {
            @:Bienvenue @user.FirstName @user.LastName
        }
        else
        {
            @:Bienvenue
        }
    </h1>
    <p class="tagline">Les bons comptes font les bons amis : TrueBalances vous permet de partager et de gérer vos dépenses collectives,</p>
    <p class="tagline"> pour que chaque instant passé ensemble soit un souvenir inoubliable.</p>
    <img src="~/logoTrue.png" alt="Logo de l'application">

    @if (User.Identity.IsAuthenticated)
    {
        <!-- Liste des groupes -->
        <div class="list-group mb-4">
            @foreach (var group in groups)
            {
                <a asp-action="Details" asp-route-id="@group.Id" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                    @group.Name
                    <span class="badge bg-primary rounded-pill">
                        @(group.Members.Count() > 1 ? $"{group.Members.Count()} membres" : $"{group.Members.Count()} membre")
                    </span>
                </a>
            }
        </div>


        <!-- Bouton Ajouter un Groupe -->
        <div class="custom-buttons">
            <a asp-action="Create" class="btn custom-button btn-lg">Ajouter un groupe</a>
        </div>
    }
    else
    {
        <div class="custom-buttons">
            <a class="btn custom-button btn-lg" asp-area="Identity" asp-page="/Account/Register">S'inscrire</a>
            <a class="btn custom-button btn-lg" asp-area="Identity" asp-page="/Account/Login">Se connecter</a>
        </div>
    }
</div>

