@model TrueBalances.Models.GroupDetailsViewModel
@{
    ViewData["Title"] = "Modifier le groupe";
}

<div class="container mt-5">
    <h2 class="text-center">@Model.Group.Name</h2>

    @if (TempData["Errors"] != null)
    {
        var errors = TempData["Errors"] as List<string>;
        if (errors != null && errors.Count > 0)
        {
            <div class="alert alert-danger mt-3">
                <ul>
                    @foreach (var error in errors)
                    {
                        <li>@error</li>
                    }
                </ul>
            </div>
        }
    }

    <div class="row mt-5">
        <div class="col-md-6">
            <h3>Participant</h3>
            <ul class="list-group">
                @foreach (var member in Model.Group.Members)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @member.CustomUser.UserName
                        <form asp-action="RemoveMember" method="post" class="d-inline">
                            <input type="hidden" name="groupId" value="@Model.Group.Id" />
                            <input type="hidden" name="userId" value="@member.CustomUserId" />
                            <button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
                        </form>
                    </li>
                }
            </ul>
        </div>
        <div class="col-md-6">
            <h3>Ajouter un ami</h3>
            <form asp-action="AddMembers" method="post" class="mt-3">
                <input type="hidden" name="groupId" value="@Model.Group.Id" />
                <div class="form-group">
                    <label for="selectedUserIds">Sélectionner un participant:</label>
                    <select id="selectedUserIds" name="selectedUserIds" class="form-control" multiple="multiple" size="10">
                        @foreach (var user in Model.AvailableUsers)
                        {
                            <option value="@user.Id">@user.UserName</option>
                        }
                    </select>
                </div>
                <button type="submit" class="btn btn-primary mt-3">Ajouter les participants</button>
            </form>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">Retour à la liste</a>
</div>

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
