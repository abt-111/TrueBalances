@model TrueBalances.Models.GroupDetailsViewModel

@{
    ViewData["Title"] = "Détails du groupe";
    var groupId = Model.Group.Id;
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2 class="card-title mb-0">@Model.Group.Name</h2>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Catégorie -->
                        <div class="col-md-4">
                            <div class="card bg-light mb-4">
                                <div class="card-body">
                                    <h5 class="card-title"><i class="bi bi-folder-fill"></i> Catégorie</h5>
                                    <p class="card-text">@Model.Group.Category?.Name ?? "Aucune catégorie"</p>
                                </div>
                            </div>
                        </div>

                        <!-- Participants -->
                        <div class="col-md-4">
                            <div class="card bg-light mb-4">
                                <div class="card-body">
                                    <h5 class="card-title"><i class="bi bi-people-fill"></i> Participants</h5>
                                    @if (Model.Group.Members != null && Model.Group.Members.Any())
                                    {
                                        <ul class="list-group list-group-flush">
                                            @foreach (var member in Model.Group.Members)
                                            {
                                                <li class="list-group-item">
                                                    <i class="bi bi-person-fill"></i> @member.CustomUser.UserName
                                                </li>
                                            }
                                        </ul>
                                    }
                                    else
                                    {
                                        <p>Aucun participant</p>
                                    }
                                </div>
                            </div>
                        </div>

                        <!-- Dépenses associées -->
                        <div class="col-md-4">
                            <div class="card bg-light mb-4">
                                <div class="card-body">
                                    <h5 class="card-title"><i class="bi bi-currency-dollar"></i> Dépenses associées</h5>
                                    @if (Model.Group.Expenses != null && Model.Group.Expenses.Any())
                                    {
                                        <ul class="list-group list-group-flush">
                                            @foreach (var expense in Model.Group.Expenses)
                                            {
                                                <li class="list-group-item">
                                                    <strong>@expense.Title:</strong> @expense.Amount €
                                                </li>
                                            }
                                        </ul>
                                    }
                                    else
                                    {
                                        <p>Aucune dépense associée</p>
                                    }
                                    <a asp-action="DepenseIndex" asp-route-id="@Model.Group.Id" class="btn btn-secondary">Gérer les dépenses</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
