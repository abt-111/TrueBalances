@model UserViewModel

@{
    ViewData["Title"] = "Home Page";
}

<style>
    .custom-header {
        color: #08a045;
        padding: 20px;
        text-align: center;
        border-radius: 0.25rem;
        margin-bottom: 20px;
    }

        .custom-header h1 {
            margin: 0;
            font-size: 2.5rem;
        }

    .welcome-section {
        margin-top: 20px;
    }

        .welcome-section h1 {
            margin-bottom: 20px;
            font-size: 3rem; /* Taille du texte pour la bienvenue */
            color: #08a045; /* Couleur du texte */
        }

        .welcome-section img {
            height: 300px; /* Taille du logo */
            margin-bottom: 20px;
        }

    .tagline {
        font-size: 1.25rem;
        font-style: italic;
        color: #555;
        margin-bottom: 20px;
    }

    .custom-buttons {
        display: flex;
        justify-content: center;
        gap: 20px; /* Espacement entre les boutons */
        margin-top: 20px;
    }

    .custom-button {
        background-color: #548c2f;
        color: white;
        border: none;
        padding: 15px 30px; /* Taille du bouton */
        border-radius: 0.5rem; /* Coins arrondis plus marqués */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: background-color 0.3s, box-shadow 0.3s, transform 0.3s;
        text-decoration: none;
        display: inline-block;
        font-size: 1.25rem; /* Taille du texte sur le bouton */
    }

        .custom-button:hover {
            background-color: #06a03d;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
            transform: scale(1.05); /* Effet de zoom au survol */
        }

        .custom-button:active {
            transform: scale(1); /* Réinitialise l'effet de zoom lorsque le bouton est cliqué */
        }
</style>

<div class="custom-header">
    @* <h1>TrueBalances</h1> *@
</div>

<div class="text-center welcome-section">
    <h1 class="display-4">
        @if (User.Identity.IsAuthenticated)
        {
            @:Bienvenue @Model.FirstName @Model.LastName
        }
        else
        {
            @:Bienvenue
        }
    </h1>
    <p class="tagline">Les bons comptes font les bons amis : TrueBalances vous permet de partager et de gérer vos dépenses collectives,</p>
    <p class ="tagline"> pour que chaque instant passé ensemble soit un souvenir inoubliable.</p>
    <img src="~/logoTrue.png" alt="Logo de l'application">

    <div class="custom-buttons">
        @if (User.Identity.IsAuthenticated)
        {
            <a class="custom-button" asp-controller="Expense" asp-action="Index">Gérer les dépenses</a>
            <a class="custom-button" asp-controller="Category" asp-action="Index">Gérer les catégories</a>
            <a class="custom-button" asp-controller="Group" asp-action="Index">Gérer les groupes</a>
        }
        else
        {
            <a class="custom-button" asp-area="Identity" asp-page="/Account/Register">S'inscrire</a>
            <a class="custom-button" asp-area="Identity" asp-page="/Account/Login">Se connecter</a>
        }
    </div>
</div>

@section Scripts {
    <script>
        document.querySelectorAll('.custom-button').forEach(button => {
            button.addEventListener('click', () => {
                button.classList.add('clicked');
                setTimeout(() => button.classList.remove('clicked'), 200);
            });
        });
    </script>
}
