@model TrueBalances.Models.Category

@section SpecificStylesheet {
    <link rel="stylesheet" href="~/css/category_delete.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/container.css" asp-append-version="true" />
}

@{
    ViewData["Title"] = "Supprimer une catégorie";
}

<h1 class="custom-header">@ViewData["Title"]</h1>

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h4>Êtes-vous sûr de vouloir supprimer cette catégorie?</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
            </dl>
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" name="groupId" value="@ViewBag.GroupId" />
                <input type="submit" value="Supprimer" class="btn btn-danger" /> |
                <a asp-action="Index" asp-route-groupId="@ViewBag.GroupId" class="btn btn-secondary">Retour</a>
                @* <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a> *@
            </form>
        </div>
    </div>
</div>
