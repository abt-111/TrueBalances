@model TrueBalances.Models.ViewModels.CategoryViewModel

@section SpecificStylesheet {
    <link rel="stylesheet" href="~/css/category_delete.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/container.css" asp-append-version="true" />
}

@{
    ViewData["Title"] = "Supprimer une catégorie";
}

<h1 class="custom-header">@ViewData["Title"]</h1>

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h4>Êtes-vous sûr de vouloir supprimer cette catégorie?</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Category.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Category.Name)
                </dd>
            </dl>
            <form asp-action="Delete" method="post">

                <input type="hidden" asp-for="Category.Id" />

                <input type="hidden" asp-for="GroupId" />

                <input type="submit" value="Supprimer" class="btn btn-danger" /> |
                <a asp-action="Index" asp-route-groupId="@Model.GroupId" class="btn btn-secondary">Retour</a>
            </form>
        </div>
    </div>
</div>
