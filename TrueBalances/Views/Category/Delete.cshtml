@model TrueBalances.Models.Category

@{
    ViewData["Title"] = "Supprimer une catégorie";
}

<style>
    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        border-radius: 0.25rem;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: background-color 0.3s, box-shadow 0.3s;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        border-radius: 0.25rem;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: background-color 0.3s, box-shadow 0.3s;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        }

    /* Styles généraux */
    .container {
        margin-top: 20px;
    }

    dl.row dt {
        font-weight: bold;
    }

    dl.row dd {
        margin-bottom: 20px;
    }
</style>

<h1 class="custom-header">@ViewData["Title"]</h1>

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h4>Êtes-vous sûr de vouloir supprimer cette catégorie?</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
            </dl>
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Supprimer" class="btn btn-danger" /> |
                <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
            </form>
        </div>
    </div>
</div>
