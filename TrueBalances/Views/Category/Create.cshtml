@model TrueBalances.Models.Category

@{
    ViewData["Title"] = "Ajouter une catégorie";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white text-center">
                    <h2>Ajouter une catégorie</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <input type="hidden" name="groupId" value="@ViewBag.GroupId" />
                        <div class="form-group">
                            <label asp-for="Name" class="control-label font-weight-bold">Nom de la catégorie</label>
                            <input asp-for="Name" class="form-control" placeholder="Entrez le nom de la catégorie" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group text-center">
                            <input type="submit" value="Ajouter" class="btn btn-success" />
                            <a asp-action="Index" asp-route-groupId="@ViewBag.GroupId" class="btn btn-secondary">Retour</a>
                            <a asp-action="Index" class="btn btn-secondary ml-2">Retour à la liste</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

