@model TrueBalances.Models.Category

@{
    ViewData["Title"] = "Détails";
}

<h1>Détails</h1>

<div>
    @* <h4>Category</h4> *@
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>

<!-- Section pour afficher les dépenses associées à cette catégorie -->
<div>
    <h4>Dépenses associées</h4>
    <hr />
    @if (Model.Expenses.Any())
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Titre</th>
                    <th>Montant</th>
                    <th>Date</th>
                    <th>Utilisateur</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var expense in Model.Expenses)
                {
                    <tr>
                        <td>@expense.Title</td>
                        <td>@expense.Amount €</td>
                        <td>@expense.Date.ToString("d")</td>
                        <td>@expense.CustomUser.FirstName</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Aucune dépense associée à cette catégorie.</p>
    }
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Modifier</a> |
    <a asp-action="Index">Retour à la liste</a>
</div>

