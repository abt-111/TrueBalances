@model TrueBalances.Models.Category

@section SpecificStylesheet {
    <link rel="stylesheet" href="~/css/container.css" asp-append-version="true" />
}

@{
    ViewData["Title"] = "Modifier une catégorie";
}

<h1 class="custom-header">@ViewData["Title"]</h1>

<hr />

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" name="groupId" value="@ViewBag.GroupId" />

                <div class="form-group">
                    <label asp-for="Name" class="control-label">Nom</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Modifier" class="btn btn-primary" />
                    <a asp-action="Index" asp-route-groupId="@ViewBag.GroupId" class="btn btn-secondary">Retour</a>
                </div>
            </form>
        </div>
    </div>
</div>

