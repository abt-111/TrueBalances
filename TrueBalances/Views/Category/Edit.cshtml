@model TrueBalances.Models.ViewModels.CategoryViewModel

@section SpecificStylesheet {
    <link rel="stylesheet" href="~/css/container.css" asp-append-version="true" />
}

@{
    ViewData["Title"] = "Modifier une catégorie";
}

<h1 class="custom-header">@ViewData["Title"]</h1>

<hr />

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <input type="hidden" asp-for="GroupId" />

                <input type="hidden" asp-for="Category.Id" />

                <div class="form-group">
                    <label asp-for="Category.Name" class="control-label">Nom</label>
                    <input asp-for="Category.Name" class="form-control" />
                    <span asp-validation-for="Category.Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Modifier" class="btn btn-primary" />
                    <a asp-action="Index" asp-route-groupId="@Model.GroupId" class="btn btn-secondary">Retour</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
