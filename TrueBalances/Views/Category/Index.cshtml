@model IEnumerable<TrueBalances.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<div class="container">
    <div class="row">
        <div class="col-md-12 text-center my-4">
            <h1 class="display-4">Gestion des catégories</h1>
        </div>
    </div>
    <div class="row mb-4">
        <div class="col-md-12 text-right">
            <a class="btn btn-primary" asp-action="Create"><i class="fas fa-plus"></i> Ajouter une catégorie</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.First().Name)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td class="text-right">
                                <a class="btn btn-info btn-sm" asp-action="Edit" asp-route-categorieId="@item.Id"><i class="fas fa-edit"></i> Modifier </a>
                                <a class="btn btn-secondary btn-sm" asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-info-circle"></i> Détails</a>
                                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash-alt"></i> Supprimer </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}

<a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Retour à l'accueil</a>

