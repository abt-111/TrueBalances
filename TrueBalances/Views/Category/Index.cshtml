@model IEnumerable<TrueBalances.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<style>
    /* Styles pour les icônes d'action */
    .action-icon {
        color: #073b3a; /* Couleur des icônes */
        font-size: 1.5rem; /* Taille des icônes */
        margin: 0 5px;
        transition: color 0.3s;
        text-decoration: none;
    }

        .action-icon:hover {
            color: #0056b3; /* Couleur des icônes au survol */
        }

    /* Styles pour la table */
    .table {
        border-radius: 0.25rem;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .table thead th {
            background-color: #74a57f;
            color: white;
            text-align: center;
            font-weight: bold;
        }

        .table tbody tr:nth-child(even) {
            background-color: white;
        }

        .table tbody tr:hover {
            background-color: #f8f9fa; /* Couleur de fond légèrement grise au survol pour contraste */
        }

    /* Styles pour l'en-tête de tableau */
    .custom-table-header {
        background-color: #08a045;
        color: white;
        text-align: center;
        font-weight: bold;
    }

    /* Styles pour les lignes d'information dans le tableau */
    .custom-table-info {
        background-color: white;
    }

        .custom-table-info td {
            color: black;
            font-weight: bold;
        }

    .custom-header {
        background-color: #08a045;
        color: white;
        padding: 10px;
        text-align: center;
        border-radius: 0.25rem;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-md-12 text-center my-4">
            <h1 class="display-4 custom-header">Gestion des catégories</h1>
        </div>
    </div>
    <div class="row mb-4">
        <div class="col-md-12 text-right">
            <a class="btn custom-create-btn" asp-action="Create"><i class="fas fa-plus"></i> Ajouter une catégorie</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-hover">
                <thead class="custom-table-header">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="custom-table-info">
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td class="text-right">
                                <a class="action-icon" asp-action="Edit" asp-route-categorieId="@item.Id" title="Modifier"><i class="fas fa-edit"></i></a>
                                <a class="action-icon" asp-action="Details" asp-route-id="@item.Id" title="Détails"><i class="fas fa-info-circle"></i></a>
                                <a class="action-icon" asp-action="Delete" asp-route-id="@item.Id" title="Supprimer"><i class="fas fa-trash-alt"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div>
        <a asp-controller="Home" asp-action="Index" style="color: #073b3a;">Retour à l'accueil</a>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}
