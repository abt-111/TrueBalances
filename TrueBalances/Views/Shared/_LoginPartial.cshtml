@using Microsoft.AspNetCore.Identity
@using TrueBalances.Areas.Identity.Data
@using TrueBalances.Repositories.Interfaces

@inject SignInManager<CustomUser> SignInManager
@inject UserManager<CustomUser> UserManager
@inject IProfilePhotoService ProfilePhotoService

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            @* <p>@ProfilePhotoService.GetProfilePhoto(UserManager.GetUserId(User))</p> *@
            @* <img src="@ProfilePhotoService.GetProfilePhoto(UserManager.GetUserId(User))" alt="Image circulaire" class="circle-img"> *@
        </li>
        <li class="nav-item">
            <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Bonjour @UserManager.GetUserName(User)!</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">Se deconnecter </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">S'inscrire</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Se connecter</a>
        </li>
    }
</ul>
